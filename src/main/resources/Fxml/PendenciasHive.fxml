<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="pendenciasHivePane"  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.dechivejavafx.gui.PendenciasHiveController">
    <VBox alignment="CENTER" fillWidth="true" prefHeight="700.0" prefWidth="2200.0" style="-fx-padding: 10px;">
        <Label fx:id="tituloTableViews"
               text="TABELAS DOCUMENTOS FISCAIS DO HIVE PENDENTES DE CARGAS, DUPLICIDADE DE CARGAS OU DIVERGÊNCIA DE QUANTIDADES">
        </Label>
        <HBox spacing="10" styleClass="hbox">
            <Label text="Arquivos em Tabelas Principal e Ausentes em Tabelas Detalhes" styleClass="label"/>
        </HBox>
        <HBox spacing="10" HBox.hgrow="ALWAYS" styleClass="hbox">
            <TableView fx:id="tableViewDetNFeNFCeInf" prefHeight="573.0" prefWidth="700.0">
                <columns>
                    <TableColumn fx:id="columnArquivo" text="Arquivo" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="arquivo"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="columnTabelaDetalhe" text="Tabela de Detalhe" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="tabelaDetalhe"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="columnQuantidadeNsuchave" text="Quantidade de nsuchave"
                                 prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="quantidadeNsuchave"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <VBox alignment="TOP_LEFT" fillWidth="true" VBox.vgrow="ALWAYS" HBox.hgrow="SOMETIMES"
                  style="-fx-pref-width: 20%;">
                <HBox spacing="10" styleClass="hbox">
                    <Label text="Arquivos com Duplicidade de Chave ou Item" styleClass="label"/>
                </HBox>
                        <TableView fx:id="tableDuplicidadeId" prefHeight="573.0" prefWidth="700.0">
                            <columns>
                                <TableColumn fx:id="columnArquivoDuplicidade" text="Arquivo" prefWidth="200">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="arquivo"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="columnTabelaDuplicidade" text="Tabela de Detalhe" prefWidth="200">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="tabelaDetalhe"/>
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
            </VBox>
            <!-- Tabela DiferencaQuantidadeOracleHive -->
            <VBox alignment="TOP_LEFT" fillWidth="true" VBox.vgrow="ALWAYS" HBox.hgrow="SOMETIMES"
                  style="-fx-pref-width: 50%;">
                <HBox spacing="10" styleClass="hbox">
                    <HBox spacing="10" styleClass="hbox">
                        <Label text="Divergências Entre ORAPRD21 e HIVE" styleClass="label"/>
                        <ComboBox fx:id="comboTipoDoc" VBox.vgrow="ALWAYS" prefWidth="175"/>
                        <Button fx:id="btLimpar" layoutX="101.0" layoutY="261.0" mnemonicParsing="false"
                                onAction="#onBtLimparAction" text="Limpar Seleção"/>
                    </HBox>
                </HBox>
                        <TableView fx:id="tableViewOracleHive" prefHeight="573.0" prefWidth="1185.0">
                            <columns>
                                <TableColumn fx:id="columnArquivoOracle" text="Arquivo"/>
                                <TableColumn fx:id="columnTipoDoc" text="Documento"/>
                                <TableColumn fx:id="columnTabelaOracle" text="Tabela Oracle"/>
                                <TableColumn fx:id="columnTabelaHive" text="Tabela Hive"/>
                                <TableColumn fx:id="columnTotalOracle" text="Total Oracle"/>
                                <TableColumn fx:id="columnTotalHive" text="Total Hive"/>
                                <TableColumn fx:id="columnDiferenca" text="Diferença"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
            </VBox>
        </HBox>
    </VBox>
</StackPane>